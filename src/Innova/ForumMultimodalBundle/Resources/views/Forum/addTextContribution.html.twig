function messageFlashText(x)
  {
    var msg = document.getElementById("msgFlshTxt");
    var div = document.createElement('div');
    div.setAttribute('class', "alert-success");
    msg.appendChild( div );
    if(x == 0)
    {
        div.innerHTML = "Opération annuler";
        // On l'efface 2 secondes plus tard
        setTimeout(function() { div.innerHTML = "";},2000);
    }
    else if(x == 1)
    {
        div.innerHTML = "Votre contribution a été déposé avec success";
        setTimeout(function() { div.innerHTML = "";},2000);
    }
  }
</script>
