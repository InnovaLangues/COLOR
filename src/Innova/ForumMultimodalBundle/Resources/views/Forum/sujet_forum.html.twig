{% include "InnovaForumMultimodalBundle:Forum:ajouter.html.twig"%}
<a class="btn btn-success" data-toggle="modal" href="#" data-target="#ajout" style="position: static; float: right;">Créer un nouveau Collectorama</a> 
        <br /><br />
<table class="table table-striped table-bordered">
  <tr>
    <th style="width: 70%; text-align: center;">Sujet et description</th>
    <th style="width: 20%; text-align: center;">Date</th>
    <th style="width: 10%; text-align: center;">Messages</th>
  </tr>
{% for entity in entities %}
  <tr>
    <td><a href="{{ path('innova_forum_multimodal_voir_contribution', { 'id': entity.id }) }}"><strong>{{entity.sujet}}</strong> </a><br /> {{entity.description}}</td>
    <td style="text-align: center; vertical-align: middle;">Sujet créé le <span style="color: #1290D0;">{{entity.date|date("m/d/Y")}}</span><br /> <span
      style="font-size: small;">créé par {{entity.auteur}}</span>
    </td>
    <td style="text-align: center; vertical-align: middle;">42</td>
  </tr>
   {% endfor %}
</table>